export function useAuth() {
  const context = React.useContext(AuthContext);
  
  // Si el contexto es undefined, significa que no está dentro del AuthProvider
  if (context === undefined) {
    throw new Error('useAuth must be used within an AuthProvider');
  }
  
  // Si el contexto es null, devolvemos un objeto con valores por defecto
  if (!context) {
    console.warn('AuthContext is not properly initialized. Make sure Firebase is configured correctly.');
    return {
      user: null,
      loading: false,
      isAuthenticated: false,
      error: new Error('Auth not properly initialized'),
      signIn: async () => { throw new Error('Auth not properly initialized'); },
      signOut: async () => { throw new Error('Auth not properly initialized'); },
      resetPassword: async () => { throw new Error('Auth not properly initialized'); },
    };
  }
  
  return context;
}

