rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función para verificar si el usuario es admin
    // Simplificado: cualquier usuario autenticado es considerado admin
    function isAdmin() {
      return request.auth != null;
    }
    
    // Función para verificar autenticación básica
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // === SERVICIOS - Lectura pública, escritura solo admin ===
    match /services/{serviceId} {
      // Lectura: permitida para todos (necesaria para la app pública)
      allow read: if true;
      
      // Escritura: solo administradores autenticados
      allow create, update, delete: if isAdmin();
    }
    
    match /servicios/{serviceId} {
      // Lectura: permitida para todos
      allow read: if true;
      
      // Escritura: solo administradores autenticados
      allow create, update, delete: if isAdmin();
    }
    
    // === CATEGORÍAS - Lectura pública, escritura solo admin ===
    match /categories/{categoryId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }
    
    // === ANALYTICS Y ESTADÍSTICAS - Escritura pública, lectura solo admin ===
    match /analytics/{document=**} {
      // Permitir escritura pública para tracking de eventos
      allow create: if true;
      // Lectura solo para administradores
      allow read, update, delete: if isAdmin();
    }
    
    match /stats/{statId} {
      allow read, write: if isAdmin();
    }
    
    // === CONFIGURACIÓN DEL SISTEMA - Solo admin ===
    match /config/{configId} {
      allow read, write: if isAdmin();
    }
    
    // === LOGS Y AUDITORÍA - Solo admin ===
    match /logs/{logId} {
      allow read, write: if isAdmin();
    }
    
    // === CACHE METADATA - Solo admin para gestión ===
    match /cache/{cacheId} {
      allow read, write: if isAdmin();
    }
    
    // === USUARIOS Y SESIONES - Acceso controlado ===
    match /users/{userId} {
      // Los usuarios pueden leer/escribir solo sus propios datos
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
      // Los admins pueden leer todos los usuarios
      allow read: if isAdmin();
    }
    
    match /sessions/{sessionId} {
      allow read, write: if isAdmin();
    }
    
    // === BLOQUEAR TODO LO DEMÁS ===
    // Cualquier otra colección requiere autenticación de admin
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}